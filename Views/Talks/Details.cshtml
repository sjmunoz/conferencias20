@model MvcMovie.Models.Talk

@{
    ViewData["Title"] = "Details";
}
<div class="regular-crud">
    <h1>Details</h1>

    <div>
        <h4>Talk</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Conference)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Conference.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Room)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Room.Location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Room.Capacity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Room.Capacity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EventDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndEventDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndEventDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Resources)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Resources)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Talker)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Talker)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Track)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Track)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Attendants)
            </dt>
            <dd class="col-sm-10">
                @{
                    foreach (var attendant in Model.Attendants)
                    {
                        <text>
                            <p> @attendant.User.Name @attendant.User.Lastname</p>
                            <br />
                        </text>
                    }
                }
            </dd>
        </dl>
    </div>
    <div>
        @{
            if (ViewBag.talkUser != null)
            {
                <form method="post" asp-action="DeleteAttendant" asp-route-id="@Model.Id">
                    <button type="submit" class="coolButton" id="button5">
                        Unsubscribe
                    </button>
                </form>
            }
            else if (@Model.Attendants.Count < @Model.Room.Capacity)
            {
                <form method="post" asp-action="AddAttendant" asp-route-id="@Model.Id">
                    <button type="submit" class="coolButton" id="button5">
                        Subscribe
                    </button>
                </form>
            }
            else
            {
                <h5>Esta charla esta llena!</h5>
            }

            if (ViewBag.currentUser.Id == @Model.UserId)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" id="button5" class="coolButton">Edit</a>
            }

            <a asp-action="Index" id="button5" class="coolButton float-right">Back to List</a>
        }

    </div>
</div>