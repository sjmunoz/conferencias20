@model MvcMovie.Models.Chat

@{
    ViewData["Title"] = "Details";
}
<div class="regular-crud">
    <h1>Details</h1>

    <div>
        <div class="row">
                <div class="col-10">
                    <h4>Chat</h4>
                </div>
                <div class="col-2">
                    <h4> Rating Promedio: @ViewBag.averageRating</h4>
                </div>
            </div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModeratorId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModeratorId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Room)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Room.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Conference)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Conference.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EventDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndEventDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndEventDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Track)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Track)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Attendants)
            </dt>
            <dd class="col-sm-10">
                @{
                    foreach (var attendant in Model.Attendants)
                    {
                        <text>
                            <p> @attendant.User.Name @attendant.User.Lastname</p>
                            <br />
                        </text>
                    }
                }
            </dd>
        </dl>
    </div>

    <div>
        @{
            if (ViewBag.chatUser != null)
            {
                <form method="post" asp-action="DeleteAttendant" asp-route-id="@Model.Id">
                    <button type="submit" class="coolButton" id="button5">
                        Unsubscribe
                    </button>
                </form>
                if ((ViewBag.chatUser.Rating == null) && (DateTime.Now >= @Model.EndEventDate))
                {
                    <form method="get" asp-action="giveRating" asp-route-id="@Model.Id">
                    <button type="submit" class="coolButton" id="button5">
                        Give Rating
                    </button>
                    </form>

                }
            }
            else if (@Model.Attendants.Count < @Model.Room.Capacity)
            {
                <form method="post" asp-action="AddAttendant" asp-route-id="@Model.Id">
                    <button type="submit" class="coolButton" id="button5">
                        Subscribe
                    </button>
                </form>
            }
            else
            {
                <h5>Este chat esta lleno!</h5>
            }

            if (ViewBag.currentUser.Id == @Model.UserId)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" id="button5" class="coolButton">Edit</a>
            }

            <a asp-action="Index" id="button5" class="coolButton float-right">Back to List</a>
        }

    </div>
</div>