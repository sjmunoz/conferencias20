@model MvcMovie.Models.Chat

@{
    ViewData["Title"] = "Create";
}

<div class="regular-crud">
    <h4>Create Chat</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ModeratorId" class="control-label"></label>
                    <input asp-for="ModeratorId" class="form-control" />
                    <span asp-validation-for="ModeratorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoomID" class="control-label"></label>
                    <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ConferenceId" class="control-label"></label>
                    <select asp-for="ConferenceId" class="form-control" asp-items="ViewBag.ConferenceId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="EventDate" class="control-label"></label>
                    <input asp-for="EventDate" class="form-control" />
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndEventDate" class="control-label"></label>
                    <input asp-for="EndEventDate" class="form-control" />
                    <span asp-validation-for="EndEventDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Track" class="control-label"></label>
                    <input asp-for="Track" class="form-control" />
                    <span asp-validation-for="Track" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="coolButton float-right" id="button5">Back to List</a>
    </div>
    <br />

</div>
