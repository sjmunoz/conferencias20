@model MvcMovie.Models.Talk

@{
    ViewData["Title"] = "AddTalk";
}
    <div class="regular-crud">


        <h4>Talk</h4>
        <h5>@ViewData["ConferenceName"]</h5>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddTalk">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Track" class="control-label"></label>
                        <input asp-for="Track" class="form-control" />
                        <span asp-validation-for="Track" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Resources" class="control-label"></label>
                        <input asp-for="Resources" class="form-control" />
                        <span asp-validation-for="Resources" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Talker" class="control-label"></label>
                        <select asp-for="Talker" class="form-control" asp-items="ViewBag.Talkers"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoomID" class="control-label">Room</label>
                        <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="EventDate" class="control-label">Start Date</label>
                        <input asp-for="EventDate" class="form-control" />
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndEventDate" class="control-label">End Date</label>
                        <input asp-for="EndEventDate" class="form-control" />
                        <span asp-validation-for="EndEventDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="AddTalk" class="btn btn-primary" />
                    </div>
                </form>
            </div>

        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }


    </div>