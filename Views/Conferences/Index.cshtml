@model IEnumerable<MvcMovie.Models.Conference>

@{
    ViewData["Title"] = "Index";
}

    <div class="regular-crud">
        <h1>Conferences</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReleaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Spots)
                    </th>
                    <th>
                        User
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EventCenter)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Spots)
                    </td>
                    <td>
                        @item.User
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventCenter.Name)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    @if (ViewBag.currentUser.Id == @item.UserId)
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                            <a asp-action="AddRepetition" asp-route-id="@item.Id">AddRepetition</a>
                        </td>
                    }
                </tr>
                }
            </tbody>
        </table>

        <p>
            <a asp-action="Create" id="button5" class="coolButton">Create New</a>
        </p>
    </div>
